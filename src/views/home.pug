doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        link(rel="stylesheet", href="https://unpkg.com/mvp.css@1.12/mvp.css")
        title Noom
    body 
        header 
            h1 Noom 
        main 
            div#welcome 
                form 
                    input#roomInput(placeholder="room name", required, type="text")
                    input#nickInput(placeholder="nickname", required, type="text")
                    button Enter Room
                h4 Open Rooms: 
                ul
            div#call
                button#leaveBtn Leave &rarr;
                div#info 
                    h3#presentRoom 
                    h3#presentName
                div#myStream 
                    video#myFace(autoplay, playsinline, width="400", height="400") 
                    button#mute Mute
                    button#camera Turn Camera Off
                    select#cameras
                    video#peerFace(autoplay, playsinline, width="400", height="400") 
                div#chat 
                    ul 
                    form#chatForm
                        input(placeholder="Write down here...", required, type="text")
                        button Submit
        script(src="/socket.io/socket.io.js") 
        script(src="/public/js/app.js") 