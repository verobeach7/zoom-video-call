doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        link(rel="stylesheet", href="https://unpkg.com/mvp.css@1.12/mvp.css")
        link(rel="stylesheet", href="../public/css/home.css")
        title Noom
    body 
        header 
            h1 Noom 
        main 
            div#welcome 
                h4 Open Rooms: 
                ul
                form 
                    input#roomInput(placeholder="room name", required, type="text")
                    input#nickInput(placeholder="nickname", required, type="text")
                    button Enter Room
            div#call
                div#navWrapper
                    div#info 
                        h3#presentRoom 
                        h3#presentName
                    button#leaveBtn Leave &rarr;
                div#container 
                    div#myStream 
                        video#peerFace(autoplay, playsinline, width="400", height="300") 
                        video#myFace(autoplay, playsinline, width="400", height="300") 
                        div#controls
                            button#mute Mute
                            button#camera Turn Camera Off
                        select#cameras
                    div#chat 
                        ul 
                        form#chatForm
                            input(placeholder="Write down here...", required, type="text")
                            button Submit
        script(src="/socket.io/socket.io.js") 
        script(src="/public/js/app.js") 